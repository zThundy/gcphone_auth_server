<!DOCTYPE HTML>

<html>

<head>
    <title>zThundy's Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/notification.css" />
    <script src="https://kit.fontawesome.com/2656c82e02.js" crossorigin="anonymous"></script>
</head>

<body class="preload">
    <div id="auth-container">
        <img id="logo-pic" class="auth-login-logo" src="phone_logo.png" />
        <form action="/register" method="post">
            <!-- user input -->
            <span class="sing-in-label">Sign-Up</span>
            <input class="input-box-section" type="text" name="username" placeholder="Username">
            <input class="input-box-section" type="text" name="email" placeholder="Email">
            <input class="input-box-section" type="password" name="password" placeholder="Password">
            <input class="input-box-section" type="password" name="r_password" placeholder="Repeat password">
            <!-- submit button -->
            <input id="submit-button" class="input-button-section" type="submit" value="Register">

            <%- include('partial/captcha'); %>
        </form>

        <span class="bottom-divider-line"></span>
        <span class="bottom-text-label">Already have an account?</span>
        <span class="bottom-text-label" style="font-weight: bolder;">Login <a href="/login">here</a>!</span>
    </div>
    
    <%- include('partial/notification'); %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="js/register.js"></script>
</body>

</html>